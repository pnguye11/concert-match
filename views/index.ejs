<!DOCTYPE html>
<html>
  <head>
    <title>Concert Match</title>
    <script src="https://code.jquery.com/jquery-3.0.0.js" integrity="sha256-jrPLZ+8vDxt2FnE1zvZXCkCcebI/C8Dt5xyaQBjxQIo=" crossorigin="anonymous"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.12.2/jquery.min.js"></script>
    <script type="text/javascript" src="/js/login.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/js/materialize.min.js"></script>
    <script src='https://api.tiles.mapbox.com/mapbox-gl-js/v0.20.1/mapbox-gl.js'></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/css/materialize.min.css">
    <link href='/stylesheets/style.css' type="text/css" rel="stylesheet" media="screen,projection">
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/css/materialize.min.css">
    <link href='https://api.tiles.mapbox.com/mapbox-gl-js/v0.20.1/mapbox-gl.css' rel='stylesheet' />
  </head>
  <body>
    <% include ./partials/_nav %>
    <% include ./partials/_map %>

    <div id="loader-wrapper">
      <div id="loader"></div>
      <div class="loader-section section-left"></div>
      <div class="loader-section section-right"></div>
    </div>

    <div class="container">
<div id="map"></div>
      <% if (user) { %>
         <% artists.forEach(function(el, i, arr){ %>

      <div class="row">
        <div class="col s6 l6">
          <div class="card">
            <div class="card-image">
              <img src="<%=   el.image; %>">
              <span class="card-title"><%=i+1 + ". "%><%=   el.name; %></span>
                <div class="card-content">
                <% if (el.concerts) { %>
                  <p>
                    <% el.concerts.forEach(function(concert, i, arr){ %>
                      <%= JSON.stringify(concert) %>
                    <% });  %>
                  </p>
                  <% }  %>
                </div>
            </div>
          </div>
        </div>
      </div>
    <% }); %>
        <a href="/logout">Logout</a>
      <% } else { %>
        <a href="/auth/spotify">Login</a>
      <% } %>



  <div id="modal1" class="modal">
    <div class="modal-content">
      <h4>Edit Profile</h4>
      <div>
        <label for="<%= user.name %>">Name</label>
        <input placeholder="<%= user.name %>"=type="text" id="username">
        </div>
        <div>
        <label for="<%= user.photo %>">Profile Photo URL</label>

        <input placeholder="<%= user.photo %>"type="text" id="userphoto">
      </div>
    </div>
    <div class="modal-footer">
      <a id="submit-profile" "href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">Submit changes</a>
    </div>
  </div>



  <script>
    drawMap({
      lat:<%= lat %>,
      lng:<%= lng %>
    });

    $('#submit-profile').on('click', function(evt) {
      $.ajax({
        url: '/api/update-profile',
        method: 'PUT',
        data: {
          name: $('#username').val(),
          photo: $('#userphoto').val()
        }
      }).then(function(user) {
        $('#modal1').closeModal();
        console.log(user);
      });
    });

$(document).ready(function() {
  $('.modal-trigger').leanModal();
});


  </script>

  </body>
</html>
