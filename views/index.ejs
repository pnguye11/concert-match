<!DOCTYPE html>
<html>
  <head>
    <title>Concert Match</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/css/materialize.min.css">
    <link href='https://api.tiles.mapbox.com/mapbox-gl-js/v0.20.1/mapbox-gl.css' rel='stylesheet' />
    <script src="https://code.jquery.com/jquery-3.0.0.js" integrity="sha256-jrPLZ+8vDxt2FnE1zvZXCkCcebI/C8Dt5xyaQBjxQIo=" crossorigin="anonymous"></script>
    <script src='https://api.tiles.mapbox.com/mapbox-gl-js/v0.20.1/mapbox-gl.js'></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/js/materialize.min.js"></script>
  </head>
  <body>
    <% include ./partials/_nav %>
    <% include ./partials/_map %>
    <div class="container">
<div id="map"></div>
      <% if (user) { %>
         <% artists.forEach(function(el, i, arr){ %>

      <div class="row">
        <div class="col s6 l6">
          <div class="card">
            <div class="card-image">
              <img src="<%=   el.image; %>">
              <span class="card-title"><%=i+1 + ". "%><%=   el.name; %></span>
            </div>

          </div>
        </div>
      </div>
<% }); %>



        <%= artists %>

        <a href="/logout">Logout</a>
      <% } else { %>
        <a href="/auth/spotify">Login</a>
      <% } %>



  <div id="modal1" class="modal">
    <div class="modal-content">
      <h4>Edit Profile</h4>
      <div>
        <label for="<%= user.name %>">Name</label>
        <input placeholder="<%= user.name %>"=type="text" id="username">
        </div>
        <div>
        <label for="<%= user.photo %>">Profile Photo URL</label>

        <input placeholder="<%= user.photo %>"type="text" id="userphoto">
      </div>
    </div>
    <div class="modal-footer">
      <a id="submit-profile" "href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">Submit changes</a>
    </div>
  </div>



  <script>
    var lat, lng;
    navigator.geolocation.getCurrentPosition(function(pos){
      lat = pos.coords.latitude;
      lng = pos.coords.longitude;
      $.post('/api/location', {
        lat: lat,
        lng: lng
      }).then(function(coords) {
        // center map based on lat, lng
        drawMap(coords);
      });
    });


    $('#submit-profile').on('click', function(evt) {
      $.ajax({
        url: '/api/update-profile',
        method: 'PUT',
        data: {
          name: $('#username').val(),
          photo: $('#userphoto').val()
        }
      }).then(function(user) {
        $('#modal1').closeModal();
        console.log(user);
      });
    });

$(document).ready(function() {
  $('.modal-trigger').leanModal();
});

  </script>

  </body>
</html>
